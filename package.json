{
  "name": "i18n-auto",
  "displayName": "i18n-auto",
  "description": "",
  "author": "ruo-love",
  "publisher": "ruo-love",
  "version": "0.0.6",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "icon.png",
  "activationEvents": [],
  "main": "./dist/extension.js",
  "vsce": {
    "out": "vsix-out"
  },
  "contributes": {
    "commands": [
      {
        "command": "i18n-auto.translate",
        "title": "i18n-auto"
      }
    ],
    "keybindings":{
      "command": "i18n-auto.translate",
      "key": "Ctrl+2"
    },
    "menus": {
        "editor/context": [
            {
                "command": "i18n-auto.translate",
                "when": "editorTextFocus"
            }
        ]
    },
    "icon": "icon.png",
    "configuration": {
      "type": "object",
      "title": "translate configuration",
      "properties": {
        "translate.toLang": {
          "type": "string",
          "enum": ["中文", "日文", "英文", "韩文", "法文", "俄文", "葡萄牙文", "西班牙文", "越南文"],
          "default": "英文",
          "description": "目标语言"
        },
          "translate.select": {
            "type": "string",
            "enum": ["selected", "row"],
            "default": "selected",
            "description": "内容抓取方式"
          },
          "translate.appKey": {
              "type": "string",
              "default": "",
              "description": "有道翻译appKey"
          },
          "translate.appSecret": {
              "type": "string",
              "default": "",
              "description": "有道翻译appSecret"
          }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "build":"vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.1",
    "typescript": "^5.5.4",
    "ts-loader": "^9.5.1",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
