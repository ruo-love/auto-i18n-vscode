{
  "name": "quick-translation",
  "displayName": "Quick Translation",
  "description": "快捷翻译文本并复制到剪贴板",
  "author": "ruo-love",
  "publisher": "ruo-love",
  "version": "0.1.6",
  "engines": {
    "vscode": "^1.75.1"
  },
  "categories": [
    "Other"
  ],
  "icon": "icon.png",
  "activationEvents": [],
  "main": "./dist/extension.js",
  "vsce": {
    "out": "vsix-out"
  },
  "contributes": {
    "commands": [
      {
        "command": "quick-translation.translate.row",
        "title": "Translate line"
      },
      {
        "command": "quick-translation.translate.selected",
        "title": "Translate selected"
      }
    ],
    "keybindings": [
      {
        "command": "quick-translation.translate.row",
        "key": "Ctrl+l"
      },
      {
        "command": "quick-translation.translate.selected",
        "key": "Ctrl+i"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "quick-translation.translate.row",
          "when": "editorTextFocus"
        },
        {
          "command": "quick-translation.translate.selected",
          "when": "editorTextFocus"
        }
      ]
    },
    "icon": "icon.png",
    "configuration": {
      "type": "object",
      "title": "translate configuration",
      "properties": {
        "quick-translation.translate.toLang": {
          "type": "string",
          "enum": [
            "中文",
            "日文",
            "英文",
            "韩文",
            "法文",
            "俄文",
            "葡萄牙文",
            "西班牙文",
            "越南文"
          ],
          "default": "英文",
          "description": "目标语言"
        },
        "quick-translation.translate.copy": {
          "type": "string",
          "enum": [
            "open",
            "close"
          ],
          "default": "open",
          "description": "翻译后是否复制结果到剪贴板"
        },
        "quick-translation.translate.tool": {
          "type": "string",
          "enum": [
            "有道",
            "百度"
          ],
          "default": "百度",
          "description": "选择翻译服务平台"
        },
        "quick-translation.YOU_DAO.appKey": {
          "type": "string",
          "default": "",
          "description": "有道翻译appKey"
        },
        "quick-translation.YOU_DAO.appSecret": {
          "type": "string",
          "default": "",
          "description": "有道翻译appSecret"
        },
        "quick-translation.BAI_DU.appKey": {
          "type": "string",
          "default": "",
          "description": "百度翻译appKey"
        },
        "quick-translation.BAI_DU.appSecret": {
          "type": "string",
          "default": "",
          "description": "百度翻译appSecret"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "build": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.75.1",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.9.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.4",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "axios": "^1.7.7",
    "uuid": "^10.0.0"
  }
}