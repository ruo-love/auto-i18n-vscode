{
  "name": "i18n-auto",
  "displayName": "i18n-auto",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "i18n-auto.translate",
        "title": "Hello World1"
      }
    ],
    "keybindings":{
      "command": "i18n-auto.translate",
      "key": "Ctrl+2"
    },
    "menus": {
        "editor/context": [
            {
                "command": "extension.translate",
                "when": "editorTextFocus",
                "group": "i18n-auto"
            }
        ]
    },
    "configuration": {
      "type": "object",
      "title": "translate configuration",
      "properties": {
          "translate.select": {
            "type": "string",
            "enum": ["selected", "row"],
            "default": "selected",
            "description": "内容抓取方式"
          },
          "translate.youdao.appKey": {
              "type": "string",
              "default": "135af7f123741651",
              "description": "有道翻译appKey"
          },
          "translate.youdao.appSecret": {
              "type": "string",
              "default": "3qElbjXX1P8o5drSPoF17db4Y1LKWhH3",
              "description": "有道翻译appSecret"
          }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.1",
    "typescript": "^5.5.4",
    "ts-loader": "^9.5.1",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
